                                <div class="col-md-6"> <input id="numfac" type="number" class="form-control" /></div>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <button id="btnFac" type="button" class="btn btn-primary">Show Factorial</button>
                                </div>
                                <div class="col-md-4">
                                    <button id="clearFac" type="button" class="btn btn-primary">Clear</button>
                                </div>
                                <div class="col-md-2 text-right" style="font-size: 15px; padding-top: 5px">
