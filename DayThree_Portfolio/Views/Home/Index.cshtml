                                </div>
                                <div class="col-md-2">
                                    <i id="toggleFac" class="fa fa-toggle-off fa-align-left" style="font-size:36px;color:royalblue;"></i>
                                </div>
                            </div>
                        </div>
                        <div class="col=md-6 text-center">
                            <div class="row" style="padding-top: 10px">
                                <p id="outputfac"></p>
                            </div>
                        </div>
                        <div id="codeFac" class="row">
                            <div class="col-md-12">
                                <pre class="brush: js">
                        $("#btnFac").click(function () {
                            //gain user input
                            var usernum = $("#numfac").val();

                            if (usernum === "") {
                                swal("Oh No!", "it seems you forgot to enter the data :(", "error");
                            }
                            else {
                                //do the math to find the factorial
                                var numFac = usernum;
                                for (var loop = usernum - 1; loop >= 1; loop--) {
                                    numFac = numFac *= loop;
                                }

                                //output the factorial
                                $("#outputfac").html("the factorial of <b> " + usernum + "</b> is <b>" + numFac + "</b>");
                            }
                        });
            </pre>
