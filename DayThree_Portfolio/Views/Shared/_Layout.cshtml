<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .modal {
            background-color: lightblue;
            background-color: rgba(204, 255, 255, 0.4)
        }

        .modal-content {
            background-color: #c3ecef;
        }

        .modal-footer {            
            padding-bottom: 10px;
            background-color: white;
        }

        .modal-header {
            background-color: white;
            
        }
    </style>
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Grid Demo", "GridDemo", "Home")</li>
                    <li><a href="#" data-toggle="modal" data-target="#myModal">Demos</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog modal-lg">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <ul class="nav nav-pills">
                        <li class="active"><a data-toggle="pill" href="#math">Math Calculations</a></li>
                        <li><a data-toggle="pill" href="#factorials">Factorials</a></li>
                        <li><a data-toggle="pill" href="#palindrome">Palindrome</a></li>
                        <li><a data-toggle="pill" href="#fizzbuzz">FizzBuzz</a></li>
                    </ul>
                </div>
                <div class="modal-body">                  

                    <div class="tab-content">
                        <div id="math" class="tab-pane fade in active">                          
                            <div class="row">
                                <div class="col-md-12 h3 text-center">Calculations Demo</div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-md-6">Enter number 1</div>
                                        <div class="col-md-6">
                                            <input id="num1" type="number" class="form-control" />
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">Enter number 2</div>
                                        <div class="col-md-6">
                                            <input id="num2" type="number" class="form-control" />
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">Enter number 3</div>
                                        <div class="col-md-6">
                                            <input id="num3" type="number" class="form-control" />
                                        </div>

                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">Enter number 4</div>
                                        <div class="col-md-6">
                                            <input id="num4" type="number" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">Enter number 5</div>
                                        <div class="col-md-6">
                                            <input id="num5" type="number" class="form-control" />
                                        </div>
                                    </div>
                                    <br />
                                    <button id="btnCalc" type="button" class="btn btn-primary">Calculate</button>
                                </div>
                                <div class="col-md-6 text-center" style="padding-top: 15px">
                                    <div class="row">
                                        <p id="output1"></p>
                                    </div>
                                    <div class="row">
                                        <p id="output2"></p>
                                    </div>
                                    <div class="row">
                                        <p id="output3"></p>
                                    </div>
                                    <div class="row">
                                        <p id="output4"></p>
                                    </div>
                                    <div class="row">
                                        <p id="output5"></p>
                                    </div>
                                </div>
                            </div>                                  
                        </div>

                        <div id="factorials" class="tab-pane fade">
                            <h3 class="text-center">Factorials Demo</h3>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-md-6">Please enter your number</div>
                                        <div class="col-md-6"> <input id="numfac" type="number" class="form-control" /></div>
                                    </div>
                                </div>
                            </div>

                            <button id="btnFac" type="button" class="btn btn-primary">Show Factorial</button>
                            
                            <br />

                            <div class="row">
                                <p id="outputfac"></p>
                            </div>
                        </div>

                        <div id="palindrome" class="tab-pane fade">
                            <div class="row">
                                <div class="col-md-12 h3 text-center">Palindrome Demo</div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">Enter a word</div>
                                <input id="word1" type="text" class="form-control" />
                            </div>
                            
                            <button id="btnPalindrome" type="button" class="btn btn-primary">Click Here</button>

                            <br />

                            <div class="text-center">
                                <div class="row">
                                    <p id="outputpal"></p>
                                </div>
                            </div>
                        </div>

                        <div id="fizzbuzz" class="tab-pane fade">
                            <h3>Menu 2</h3>
                            <p>Some content in menu 2.</p>
                        </div>
                    </div>

                </div>

                <div class="modal-footer">
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">                         
                            <button id="close" type="button" class="btn btn-primary btn-lg" data-dismiss="modal">Close</button>
                        </div>                     
                    </div>
            </div>

        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/JSExcercises.js"></script>
    @RenderSection("scripts", required: false)

</body>

</html>
